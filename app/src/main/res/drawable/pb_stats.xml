<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#FFFDFDFE"
                android:centerColor="#FFFDFDFE"
                android:endColor="#FFFDFDFE"

                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#70cec9"
                    android:centerColor="#70cec9"
                    android:endColor="#70cec9"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#70cec9"
                    android:centerColor="#70cec9"
                    android:endColor="#70cec9"
                    />
            </shape>
        </clip>
    </item>

</layer-list>